<main class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-10">
  <article class="flex justify-center">
    <div class="flex flex-col h-fit">
      <section class="md:h-1/2 flex flex-col justify-start items-center mb-5">
        {{>form}}
      </section>
      <section class="md:h-1/2 flex flex-col justify-start items-center mb-5">
        <h2 class="font-bold text-4xl text-center mb-6 text-red-500">Lista de Productos:</h2>
        {{>list}}
      </section>
    </div>
  </article>
  <article class="flex justify-center md:justify-start">
    <div class="flex flex-col h-fit">
      <section class="md:h-1/2 flex flex-col justify-start items-center mb-5">
        {{>message}}
      </section>
      <section class="md:h-1/2 flex flex-col justify-start items-center mb-5">
        <h2 class="font-bold text-4xl text-center mb-6 text-red-500">Lista de Mensajes:</h2>
        {{>messageList}}
      </section>
    </div>
  </article>
</main>
