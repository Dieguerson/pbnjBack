<h2 class="text-2xl font-bold italic underline text-center col-span-2">Ordenes de Compra</h2>
  
{{#each orders}}
  <section class="grid grid-cols-2 gap-3 mt-4 mb-8">

    <h3 class="text-xl font-bold col-span-2 text-center">Orden #{{this.number}}</h3>

    {{#each products}}
      <div class="border-2 border-black rounded flex flex-col items-center row-start-3">
        <h3 class="text-xl font-bold">{{this.product.name}}</h3>
        <img class="w-10 h-10" src="{{this.product.thumbnail}}" alt="{{this.product.name}}">
        <p><b>Price:</b> ${{this.product.price}}</p>
        <p><b>Stock:</b> {{this.product.stock}}</p>
        <p><b>Ammount:</b> {{this.ammount}}</p>
      </div>
    {{/each}}
  </section>
{{/each}}