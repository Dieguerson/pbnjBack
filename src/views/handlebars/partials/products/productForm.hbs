<form
  id="form"
  class="
    flex
    flex-col
    w-60
    mx-auto
    items-center
    block
  "
>
  <label 
    class="mt-3 self-start"
    for="name"
  >
    Nombre
  </label>
  <input
    class="
      border-2
      rounded
      border-black
      w-full
    "
    id="name"
    type="text"
    name="name"
  >
  
  <label 
    class="mt-3 self-start"
    for="description"
  >
    Descripción
  </label>
  <textarea
    class="
      border-2
      rounded
      border-black
      w-full
    "
    id="description"
    name="description"
    cols="2"
    rows="3"
  ></textarea>
  
  <label 
    class="mt-3 self-start"
    for="code"
  >
    Código
  </label>
  <input
    class="
      border-2
      rounded
      border-black
      w-full
    "
    id="code"
    type="number"
    name="code"
    min="0"
    step="0.01"
  >
  
  <label 
    class="mt-3 self-start"
    for="category"
  >
    Categoría
  </label>
  <input
    class="
      border-2
      rounded
      border-black
      w-full
    "
    id="category"
    type="text"
    name="category"
  >
  
  <label 
    class="mt-3 self-start"
    for="thumbnail"
  >
    Thumbnail
  </label>
  <input
    class="
      border-2
      rounded
      border-black
      w-full
    "
    id="thumbnail"
    type="text"
    name="thumbnail"
  >
  
  <label 
    class="mt-3 self-start"
    for="price"
  >
    Price
  </label>
  <input
    class="
      border-2
      rounded
      border-black
      w-full
    "
    id="price"
    type="number"
    name="price"
    min="0"
    step="0.01"
  >
  
  <label 
    class="mt-3 self-start"
    for="stock"
  >
    Stock
  </label>
  <input
    class="
      border-2
      rounded
      border-black
      w-full
    "
    id="stock"
    type="number"
    name="stock"
    min="0"
    step="0.01"
  >
  
  <input
    class="
      bg-blue-200
      text-black
      rounded
      shadow-sm
      w-20
      mt-5
      self-end
      block
    "
    id="submit"
    type="submit"
    value="Enviar"
  >

  <button
    class="
      bg-blue-200
      text-black
      rounded
      shadow-sm
      w-20
      mt-5
      self-end
      hidden
    "
    id="update"
  >
    Actualizar
  </button>
</form>